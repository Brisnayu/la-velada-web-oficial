<div class="container_theme">
  <label class="switch modern-switch">
    <input type="checkbox" class="themeToggle" />
    <span class="slider round"></span>
  </label>
</div>

<style>
  .container_theme {
    position: absolute;
    top: 1.5rem;
    right: 1rem;
  }
  .switch {
    position: relative;
    display: inline-block;
    width: 4.5rem;
    height: 1.5rem;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--color-primary);
    border-radius: 34px;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.3);
    transition: 0.4s;
  }

  .slider.round {
    border-radius: 34px;
  }

  .slider:before {
    position: absolute;
    content: "";
    display: block;
    background-image: url("/boxin-glove.png");
    background-size: 90%;
    background-repeat: no-repeat;
    height: 35px;
    width: 35px;
    top: -7px;
    background-color: var(--color-primary);
    border-radius: 50%;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 1);
    transition: 1s;
    filter: revert(100%);
  }

  .switch input:checked + .slider:before {
    transform: translate(4rem) translate(-70%, 0) rotateX(360deg);
    filter: invert(100%);
  }

  .switch input:checked + .slider {
    background-color: var(--color-primary);
  }

  .switch input:not(:checked) + .slider:before {
    background-color: var(--color-secondary);
  }

  .switch input:not(:checked) + .slider {
    background-color: var(--color-primary);
  }
</style>

<script>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme")
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light"
  }

  const isDark = getThemePreference() === "dark"
  document.documentElement.classList[isDark ? "add" : "remove"]("dark")

  const handleToggleClick = () => {
    const element = document.documentElement
    element.classList.toggle("dark")

    const isDark = element.classList.contains("dark")
    localStorage.setItem("theme", isDark ? "dark" : "light")
  }

  document
    .querySelector(".themeToggle")
    .addEventListener("change", handleToggleClick)
</script>
