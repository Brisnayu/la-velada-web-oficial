<div class="container_theme">
  <input type="checkbox" id="toggle_checkbox" class="themeToggle" />
  <label for="toggle_checkbox">
    <div class="light">
      <img src="/boxin-glove.png" alt="icon change theme" />
    </div>
    <div class="dark"></div>
  </label>
</div>

<style>
  .container_theme {
    position: absolute;
    top: 4rem;
    right: 11rem;
  }

  #toggle_checkbox {
    display: none;
  }

  label {
    display: block;
    position: absolute;
    top: 50%;
    right: 0;
    left: 0;
    width: 116px;
    height: 56px;
    margin: 0 auto;
    background-color: var(--color-primary);
    border: 4px solid var(--color-twitch);
    border-radius: 56px;
    transform: translateY(-50%);
    cursor: pointer;
    transition: 0.3s ease background-color;
    overflow: hidden;
    user-select: none;
  }

  label:hover {
    border: 4px solid var(--color-secondary);
  }

  .light {
    position: absolute;
    top: 10px;
    left: 13px;
    width: 30px;
    height: 30px;
    font-size: 25px;
    transform: scale(1.3);
    border-radius: 50%;
    transition:
      0.3s ease top,
      0.3s ease left,
      0.3s ease transform,
      0.3s ease background-color,
      0.4s linear rotate;
    z-index: 1;
    background-color: none;
  }

  .dark {
    position: relative;
    bottom: 0;
    top: 1px;
    right: -4rem;
    width: 30px;
    height: 30px;
    font-size: 30px;
    transition: 0.3s ease bottom;
  }

  .dark:before {
    content: "";
    position: absolute;
    top: -0;
    left: -17px;
    background-color: none;
    width: 30px;
    height: 30px;
    font-size: 30px;
    transition: 0.2s ease background-color;
  }

  #toggle_checkbox:checked + label {
    background-color: var(--color-primary);
    border: 4px solid var(--color-twitch);
  }

  #toggle_checkbox:checked + label:hover {
    border: 4px solid var(--color-primary);
  }

  #toggle_checkbox:checked + label .light {
    top: 10px;
    left: 64px;
    transform: scale(-1.3);
    rotate: 180deg;
    filter: invert(100%);
  }

  #toggle_checkbox:checked + label .dark {
    bottom: 14px;
  }

  img {
    width: 2rem;
  }
</style>

<script>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme")
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light"
  }

  const isDark = getThemePreference() === "dark"
  document.documentElement.classList[isDark ? "add" : "remove"]("dark")

  const handleToggleClick = () => {
    const element = document.documentElement
    element.classList.toggle("dark")

    const isDark = element.classList.contains("dark")
    localStorage.setItem("theme", isDark ? "dark" : "light")
  }

  document
    .querySelector(".themeToggle")
    .addEventListener("change", handleToggleClick)
</script>
